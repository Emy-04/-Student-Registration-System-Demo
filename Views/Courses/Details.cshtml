@model UniWebApp.Models.Course

@{
    ViewData["Title"] = "Details";
}

 <h1>Details</h1> 

<style>
    .custom-table th, .custom-table td {
        border-color: #343a40 !important; /* Darker border color */
    }
</style>

<div class="table-responsive">
    <hr />
    <table class="table  table-hover table-border  table-striped custom-table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.CrsCode)</th>
            <td>@Html.DisplayFor(model => model.CrsCode)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.CrsName)</th>
            <td>@Html.DisplayFor(model => model.CrsName)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.CreditHours)</th>
            <td>@Html.DisplayFor(model => model.CreditHours)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.year)</th>
            <td>@Html.DisplayFor(model => model.year)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Grade)</th>
            <td>@Html.DisplayFor(model => model.Grade)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.TermWork)</th>
            <td>@Html.DisplayFor(model => model.TermWork)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ExamWork)</th>
            <td>@Html.DisplayFor(model => model.ExamWork)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Level)</th>
            <td>@Html.DisplayFor(model => model.Level)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Semester)</th>
            <td>@Html.DisplayFor(model => model.Semester)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Department)</th>
            <td>@Html.DisplayFor(model => model.Department.Name)</td>
        </tr>
    </table>
</div>
