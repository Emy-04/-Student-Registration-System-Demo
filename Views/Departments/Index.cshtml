@model IEnumerable<UniWebApp.Models.Department>

@{
    ViewData["Title"] = "Index";
}

@* <h1>Index</h1> *@

<p>
    <a asp-controller="Departments" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus"></i> &nbsp; Add New Department
    </a>
</p>
<table class="table table-hover table-border table-striped">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td class="text-end">
                    <a asp-controller="Departments" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success">
                        <i class="bi bi-pencil"></i>
                    </a> |
                    &nbsp;
                    <a asp-controller="Departments" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                        <i class="bi bi-journal-text"></i>
                    </a> |
                    &nbsp;
                    <a asp-controller="Departments" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash3"></i>
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
